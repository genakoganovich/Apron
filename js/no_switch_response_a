// אובייקט המגדיר את ההרשאות עבור כל תפקיד
const rolePermissions = {
  "מנהל": ["הכל"],
  "סגן מנהל": ["כמעט הכל"],
  "מזכיר": ["כלום וחצי"],
  "עובד": ["כלום"]
};

/**
 * פונקציה המחזירה את הרשאותיו של עובד לפי תפקידו.
 * @param {string} role - תפקיד העובד.
 * @returns {string[]} מערך ההרשאות של העובד.
 */
function getPermissions(role) {
  // ניסיון להחזיר את הרשאות התפקיד מהאובייקט.
  // אם התפקיד לא קיים באובייקט, הפעולה תחזיר undefined.
  const permissions = rolePermissions[role];

  // אם לא נמצאו הרשאות עבור התפקיד הנתון (הערך הוא undefined),
  // מוחזרת ברירת מחדל של מערך ריק.
  return permissions || [];
}   